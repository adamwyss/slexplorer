<Application x:Class="Ijv.Redstone.ExplorerApplication"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:design="clr-namespace:Ijv.Redstone.Design;assembly=Ijv.Redstone.Common">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Ijv.Redstone.SilverlightExplorer;component/ExtendedStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

        <DataTemplate x:Key="design:IViewModel">
            <ContentPresenter Content="{Binding View}" />
        </DataTemplate>

    </Application.Resources>
</Application>
